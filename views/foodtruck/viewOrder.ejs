<%- include("../partials/header") %>


<section id="about" class="about-section about-style-6">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-6">
				<div class="about-content-wrapper">
					<div class="section-title mb-30 mt-100 ">
						<h4>Details</h4>
						<br />
						<p>Name - <strong><%= order.customer.name %></strong></p>

						<br />

						<p>Additional Comments -
							<strong><%= order.customer.additionalComments ? order.customer.additionalComments : "None" %></strong>
						</p>

						<p>Ordered on - <strong><%= order.orderDate.toLocaleDateString() %></strong></p>


						<p style="font-size: x-large; white-space: pre-line;">
							<br /><br />

						<h4>Menu Item / Quantity</h4>

						<% order.orderContents.forEach(orderItem => { %> <br />
						<% if (orderItem.customerName) return %>

						<%= orderItem.name.replace("-", " ") %> / <%= orderItem.count %>
						<br />
						<br />

						Quantity - <%= orderItem.count %>
						<br />
						Price - $<%= orderItem.total %>

						<hr />
						<% }) %>
						</p>

					</div>

					<form action="/view-order/<%= order._id %>" method="POST">

						<div class="col-md-6 mb-20">
							<div class="single-input">
								<label for="openOrder">Is Order Open?</label>
								<% if (order.isOrderOpen) { %>
								<input class="openOrder" name="openOrder" type="checkbox" checked />
								<% } else { %>
								<input class="openOrder" name="openOrder" type="checkbox" />
								<% } %>
							</div>
						</div>

						<div class="col-md-12">
							<div class="form-button">
								<button type="submit" class="button radius-10">Update<i
										class="lni lni-telegram-original"></i>
								</button>
								<button type="button" onclick="window.location='/kitchen'"
									class="button radius-10">Finish<i class="lni lni-close"></i>
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

<%- include("../partials/footer") %>